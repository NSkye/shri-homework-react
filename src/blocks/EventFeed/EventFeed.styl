.EventFeed
  display grid
  grid-template-columns 1fr
  grid-template-rows min-content 1fr
  @media (max-width 640px)
    padding-top 70px
  &-heading
    box-sizing border-box
    padding 0
    margin 0
    font-size 36px
    line-height 42px
    padding-left 170px
    padding-top 34px
    padding-bottom 32px
    @media (max-width 1000px)
      padding-left 20px
    @media (max-width 640px)
      font-size 24px
      line-height 28px
      padding-top 0
  &-list
    list-style none
    margin 0
    padding 0
    display grid
    gap 20px
    grid-template-columns repeat(auto-fit, minmax(153px, 1fr))
    grid-auto-rows min-content
    padding-left 171px
    padding-right 171px
    padding-bottom 10px
    grid-auto-flow row
    @media (max-width 1000px)
      padding-left 20px
      padding-right 20px
  &-item
    border-radius 20px
    min-height 171px
    &_size
      &_s
        grid-column span 2
      &_l
        grid-column span 4
        grid-row span 3
      &_m
        grid-column span 3
      @media (max-width 1000px)
        &_s, &_l, &_m
          grid-column span 4
