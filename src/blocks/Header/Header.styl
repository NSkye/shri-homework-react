$height-desktop = 90px
$height-mobile = 70px

.Header
  position fixed
  box-sizing border-box
  display flex
  width 100%
  height $height-desktop
  border-bottom 1px solid #f0f0f0
  padding-left 40px
  padding-right 40px
  z-index 2
  background-color white
  @media (max-width 800px)
    height $height-mobile
    border-bottom none
    padding-left 20px
    padding-right 0
    &::before
      content ''
      background-color white
      width 100%
      height $height-mobile
      position absolute
      top 0
      left 0
      z-index 1
  &-logo
    background-repeat no-repeat
    background-size contain
    background-position center
    height 100%
    width 110px
    z-index 2
  &-navigation
    height 100%
    width auto
    background-color white
    @media (max-width 800px)
      position absolute
      top 0
      left 0
      width 100%
      height auto
      transition transform .2s
      transform translate(0, $height-mobile) translate(0, -100%)
      &_open
        transform translate(0, $height-mobile) translate(0, 0)
  &-navButton
    height 100%
    width auto
    margin-left auto
    padding-left 20px
    padding-right 20px
    cursor pointer
    display none
    justify-content center
    align-items center
    z-index 2
    @media (max-width 800px)
      display flex
  &-list
    list-style none
    display flex
    height 100%
    margin 0
    padding 0
    margin-left 20px
    @media (max-width 800px)
      flex-direction column
      height auto
      margin-left 0
  &-item
    height 100%
    display flex
    align-items center
    margin-right 28px
    &:last-child
      margin-right 0
    @media (max-width 800px)
      height auto
      margin-right 0
  &-link
    height 100%
    display flex
    align-items center
    justify-content center
    text-decoration none
    font-weight bold
    color #858585
    @media (max-width 800px)
      width 100%
      height 40px
    &_state
      &_active
        color #333333
